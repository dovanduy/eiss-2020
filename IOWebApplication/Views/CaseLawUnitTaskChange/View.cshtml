@model CaseLawUnitTaskChangeVM
@using IOWebApplication.Infrastructure.Models.ViewModels.Case
@using IOWebApplication.Infrastructure.Models.ViewModels.Common
@{

    ViewData["Title"] = "Пренасочване на задача при обективна невъзможност";
}

@section breadcrumb{
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")" title="Начало"><i class="fa fa-home"></i></a></li>
        <li><a href="@Url.Action("Index")">Регистър обективна невъзможност</a></li>
    </ol>
}

<div class="row">
    <div class="col-md-6">
        <fieldset class="is-fieldset">
            <legend class="legend_1"> Основни данни</legend>
            @Html.DisplayFor(x => x.CaseNumber, "obj")
            <div class="row">
                <div class="col-lg-6">@Html.DisplayFor(x => x.ActType, "obj")</div>
                <div class="col-lg-3">@Html.DisplayFor(x => x.ActNumber, "obj")</div>
                <div class="col-lg-3">@Html.DisplayFor(x => x.ActDate, "date")</div>

            </div>
            <div class="row">
                <div class="col-lg-6">
                    @Html.DisplayFor(x => x.TaskTypeName, "obj")
                </div>
                <div class="col-lg-6">
                    @Html.DisplayFor(x => x.TaskDate, "datetime")
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    @Html.DisplayFor(x => x.OldTaskUserName, "obj")
                </div>
                <div class="col-lg-6">
                    @Html.DisplayFor(x => x.NewTaskUserName, "obj")
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    @Html.DisplayFor(x => x.ChangeDate, "datetime")
                </div>
                <div class="col-lg-6">
                    @Html.DisplayFor(x => x.ChangeUserName, "obj")
                </div>
            </div>


            @Html.DisplayFor(x => x.Description, "obj")
        </fieldset>
        <div class="form-group">
            <a asp-action="Index" class="btn btn-danger">Назад</a>
        </div>
    </div>
    <div class="col-md-6">
        <div class="cdn-files" data-sourcetype="@SourceTypeSelectVM.CaseLawUnitTaskChange" data-sourceid="@Model.Id" data-editmode="append"></div>
    </div>
</div>
@section scripts {
    <partial name="_CdnScript" />
}

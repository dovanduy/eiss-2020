@{
    var casePersonSentencePunishmentId = ViewBag.casePersonSentencePunishmentId;
    ViewData["Title"] = "Участие в " + ViewBag.casePersonSentencePunishmentName;
    IAccessControl access = (IAccessControl)ViewBag.AccessControl;
}

@section breadcrumb{
    @if (ViewBag.breadcrumbs != null)
    {
        <partial name="Breadcrumbs" model="@(List<IOWebApplication.Infrastructure.Models.ViewModels.Common.BreadcrumbsVM>)ViewBag.breadcrumbs" />
    }
}

@if (access.CanChange)
{
    <div class="row">
        <div class="col-md-12 text-right pb-15">
            <a asp-controller="CasePersonSentence" asp-action="AddCasePersonSentencePunishmentCrime" asp-route-CasePersonSentencePunishmentId="@casePersonSentencePunishmentId" class="btn btn-success">
                <i class="fa fa-plus"></i>
                Добави
            </a>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <table id="mainTable" class="table table-hover table-striped"></table>
    </div>
</div>

@section scripts {
    <script>
        $(function () {
            var table = $('#mainTable').DataTable({
                ajax: {
                    "url": "@Url.Action("ListDataCasePersonSentencePunishmentCrime")",
                    "type": "POST",
                    "datatype": "json",
                    data: function (d) {
                        d.CasePersonSentencePunishmentId = @casePersonSentencePunishmentId;
                    }
                 },
                columns: [
                    {
                        name: 'caseCrimeLabel',
                        data: 'caseCrimeLabel',
                        title: 'Престъпление',
                        sortable: true,
                        searchable: false
                    },
                    {
                        name: 'personRoleInCrimeLabel',
                        data: 'personRoleInCrimeLabel',
                        title: 'Роля на лицето в престъплението',
                        sortable: true,
                        searchable: false
                    },
                    {
                        name: 'recidiveTypeLabel',
                        data: 'recidiveTypeLabel',
                        title: 'Рецидив',
                        sortable: true,
                        searchable: false
                    },
                    {
                        className: 'col-md-1',
                        name: 'actions',
                        data: "id",
                        title: "",
                        sortable: false,
                        searchable: false,
                        className: "text-center noExport",
                        "render": function (value) {
                            return TemplateToHtml('#templateEdit', value);
                        }
                    }
                ]
            });
        });
    </script>

    <script id="templateEdit" type="text/x-handlebars-template">
        @if (access.CanChange)
        {
            <a href="@Url.Action("EditCasePersonSentencePunishmentCrime", "CasePersonSentence")?id={{this}}" class="btn btn-warning btn-sm" title="Редакция"><i class="fa fa-edit"></i><span class="hidden-sm hidden-xs"></span></a>
        }
        else
        {
            <a href="@Url.Action("EditCasePersonSentencePunishmentCrime", "CasePersonSentence")?id={{this}}" class="btn btn-def btn-sm" title="Преглед"><i class="fa fa-eye"></i><span class="hidden-sm hidden-xs"></span></a>
        }
    </script>
}

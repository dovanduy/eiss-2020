@model string
@{
    ViewData["Title"] = "Мобилни токени за " + ViewBag.userName;
    int newCount = ViewBag.newCount;
}

@section breadcrumb{
    @if (ViewBag.breadcrumbs != null)
    {
        <partial name="Breadcrumbs" model="@(List<IOWebApplication.Infrastructure.Models.ViewModels.Common.BreadcrumbsVM>)ViewBag.breadcrumbs" />
    }
}
@if (newCount == 0)
{
<div class="row">
    <div class="col-md-12 text-right pb-15">
        <a  href='@Url.Action("AddBarcodeTying", "DeliveryAccount", new { userId = Model })' class="btn btn-success">
            <i class="fa fa-plus"></i>
            Добави
        </a>
    </div>
</div>
}
<div class="row">
    <div class="col-md-12">
        <table id="mainTable" class="table table-hover table-striped"></table>
    </div>
</div>

@section scripts {
    <script>
        $(function () {
            var table = $('#mainTable').DataTable({
                ajax: {
                    "url": "@Url.Action("ListData")",
                    "type": "POST",
                    "datatype": "json",
                    data: function (d) {
                        d.userId = '@Model';
                    }
                },
                columns: [
                    {
                        name: 'dateCreate',
                        data: 'dateCreate',
                        title: 'Създаден',
                        sortable: true,
                        "render": function (value) {
                            if (value)
                                return moment(value).format("DD.MM.YYYY");
                            else
                                return "";
                        }
                    },
                    {
                        name: 'stateName',
                        data: 'stateName',
                        title: 'Статус',
                        sortable: true,
                        searchable: true
                    },
                    //{
                    //    name: 'userId',
                    //    data: 'userId',
                    //    title: 'За',
                    //    sortable: true,
                    //    searchable: true
                    //},
                    {
                        name: 'courtName',
                        data: 'courtName',
                        title: 'Съд',
                        sortable: true,
                        searchable: true
                    },
                    {
                        name: 'userNameCreate',
                        data: 'userNameCreate',
                        title: 'Създаден от',
                        sortable: true,
                        searchable: true
                    },
                    {
                        name: 'userNameExpired',
                        data: 'userNameExpired',
                        title: 'Спрян от',
                        sortable: true,
                        searchable: true
                    },
                    {
                        name: 'dateExpired',
                        data: 'dateExpired',
                        title: 'Спрян на',
                        sortable: true,
                        "render": function (value) {
                            if (value)
                                return moment(value).format("DD.MM.YYYY");
                            else
                                return "";
                        }
                    },
                    {
                        name: 'actions',
                        data: "id",
                        title: "",
                        sortable: false,
                        searchable: false,
                        width: 80,
                        className: "text-center noExport",
                        "render": function (data, type, row) {
                            row.isNotExpired = (row.dateExpired === null);
                            return TemplateToHtml('#templateEdit', row);
                        }
                    }
                ]
            });


        });
    </script>

    <script id="templateEdit" type="text/x-handlebars-template">
        {{#if isNew}}
        <a href="@Url.Action("BarcodeTying")/{{this.id}}" class="btn btn-def btn-sm" title="Сдвояване на мобилно устройство"><i class="fa fa-mobile"></i></a>
        {{/if}}
        {{#if isNotExpired}}
        <a href="#"
           data-modal-title="Изтриване на токен"
           data-modal-url="@Url.Action("ExpiredInfo","Manage")?SubmitUrl=@Url.Action("ExpiredInfo","DeliveryAccount")&ReturnUrl={{this.id}}"
           class="btn btn-danger btn-sm modal-loader" title="Премахване">
            <i class="fa fa-remove"></i>
        </a>
        {{/if}}
    </script>
}

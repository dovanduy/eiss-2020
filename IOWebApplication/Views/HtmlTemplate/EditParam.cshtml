@model HtmlTemplateLink
@using IOWebApplication.Infrastructure.Data.Models.Common

@{
    if (Model.Id > 0)
    {
        ViewData["Title"] = "Редакция на HTML Бланки на документи: Връзки по вид съд/дело";
    }
    else
    {
        ViewData["Title"] = "Добавяне на HTML Бланки на документи: Връзки по вид съд/дело";
    }
}
@section breadcrumb{
    @if (ViewBag.breadcrumbs != null)
    {
        <partial name="Breadcrumbs" model="@(List<IOWebApplication.Infrastructure.Models.ViewModels.Common.BreadcrumbsVM>)ViewBag.breadcrumbs" />
    }
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditLink" method="post">
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.HtmlTemplateId)

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div id="saveContainer">
                <partial name="_SaveFormContent" model="@("#saveContainer")" />

                <div class="row">
                    <div class="col-lg-6">@Html.EditorFor(x => x.CourtTypeId, "GenericDropDown")</div>
                    <div class="col-lg-6">@Html.EditorFor(x => x.CaseGroupId, "GenericDropDown")</div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Запис" class="btn btn-success" />
                <a asp-action="IndexLink" asp-route-id="@Model.HtmlTemplateId" class="btn btn-danger">Назад</a>
            </div>
        </form>
    </div>
</div>


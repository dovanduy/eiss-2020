@model IOWebApplication.Core.Models.NewsViewModel
@{
    ViewData["Title"] = Model.Id == 0 ? "Добавяне на новина" : "Редакция на новина";
}

@section breadcrumb{
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")" title="Начало"><i class="fa fa-home"></i></a></li>
        <li><a href="@Url.Action("Index","News")"><i class="fa fa-book"></i> Новини</a></li>
    </ol>
}

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("Edit", "News", System.Net.Http.HttpMethod.Post))
        {
            @Html.HiddenFor(x => x.Id)
            <div class="form-group">
                @Html.EditorFor(model => model.Title)
            </div>
            <div class="form-group">
                @Html.TextAreaFor(model => model.Content, new { @class = "tinymce" })
            </div>
            <div class="form-group">
                <input type="submit" value="Запис" class="btn btn-success" />
                &nbsp;
                <a asp-action="Index" class="btn btn-danger">Назад</a>
            </div>
        }
    </div>
</div>
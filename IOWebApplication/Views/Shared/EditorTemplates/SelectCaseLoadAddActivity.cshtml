@model int?
@{
    var fieldName = ViewData.TemplateInfo.HtmlFieldPrefix.Replace(".", "_") + "_caseloadaddactivity";
    var label = (string)ViewData["label"];
    var addClass = "";
    if (string.IsNullOrEmpty(label))
    {
        addClass = "form-group";
    }
}

<div class="caseloadaddactivity-container @addClass" @if (ViewData["onChange"] != null) { <text> onchange="@(ViewData["onChange"])" </text> }>
    @if (string.IsNullOrEmpty(label))
    {
        <label asp-for="@Model" class="control-label io-req"></label>
        <input id="@fieldName" name="@fieldName" class="form-control caseloadaddactivity-control" autocomplete="false" placeholder="Въведете наименование на дейността или част от него" />
    }
    else
    {
        <input id="@fieldName" name="@fieldName" class="form-control caseloadaddactivity-control" autocomplete="false" placeholder="@label" />
    }
    <input asp-for="@Model" type="hidden" class="caseloadaddactivity-val" />
    <span asp-validation-for="@Model" class="text-danger"></span>
    <div id="@String.Format("{0}list", fieldName)" style="z-index:1050;"></div>
</div>

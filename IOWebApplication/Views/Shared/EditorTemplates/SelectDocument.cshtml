@model long?
@{

    var fieldName = ViewData.TemplateInfo.HtmlFieldPrefix.Replace(".", "_") + "_document";
    var label = (string)ViewData["document_label"];
    var addClass = "";
    if (string.IsNullOrEmpty(label))
    {
        addClass = "form-group";
    }
}

<div class="document-container @addClass">
    @if (string.IsNullOrEmpty(label))
    {
        <label asp-for="@Model" class="control-label"></label>
        <a href="#" onclick="showDocumentPreview(this); return false;" class="pull-right auto-cmpt-search" title="Преглед">Преглед</a>
        <input id="@fieldName" name="@fieldName" class="form-control document-control" data-minlength="1" autocomplete="false" placeholder="Въведете номера на документ" />
    }
    else
    {
        <input id="@fieldName" name="@fieldName" class="form-control document-control" data-minlength="1" autocomplete="false" placeholder="@label" />
    }
    <input asp-for="@Model" type="hidden" class="document-val" />
    <span asp-validation-for="@Model" class="text-danger"></span>
    <div id="@String.Format("{0}list", fieldName)" style="z-index:1050;"></div>
</div>
